<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>HOD Page - <%= department %></title>
  <style>
    /* Place the contents of hodstyles.css here */
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      /* Light gray background color */
    }

    /* Container styles */
    .App {
      margin-left: 20px;
    }

    /* Heading styles */
    h1 {
      margin-top: 20px;
      margin-bottom: 30px;
      color: #343a40;
      /* Dark gray heading color */
      text-align: center;
    }

    /* Table styles */
    #courseTable {
      width: 100%;
      margin-top: 20px;
      border-collapse: collapse;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
      /* Box shadow for table */
    }

    th,
    td {
      padding: 12px;
      border-bottom: 1px solid #dee2e6;
      /* Light gray border color */
    }

    /* Table header styles */
    thead {
      background-color: #007bff;
      /* Blue header background color */
      color: #fff;
      /* White text color */
    }

    /* Button styles */
    button {
      padding: 10px 20px;
      background-color: #007bff;
      /* Blue button background color */
      color: #fff;
      /* White text color */
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      /* Smooth transition */
    }

    button:hover {
      background-color: #0056b3;
      /* Darker blue hover color */
    }

    /* Form styles */
    form {
      margin-top: 20px;
      display: flex;
      flex-direction: column;
    }

    input[type="number"].credits-input {
      padding: 10px;
      border: 1px solid #ced4da;
      /* Light gray border color */
      border-radius: 4px;
      font-size: 16px;
    }

    /* Logout button styles */
    .logout-button {
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #dc3545;
      /* Red logout button background color */
      color: #fff;
      /* White text color */
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      /* Smooth transition */
    }

    .logout-button:hover {
      background-color: #c82333;
      /* Darker red hover color */
    }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    input[type="number"] {
      -moz-appearance: textfield;
      /* Firefox */
    }
  </style>
</head>

<body>
  <div class="App">
    <h1>HOD Page - <%= department %></h1>
    <div id="formContainer">
      <table id="courseTable">
        <thead>
          <tr>
            <th>Course Name</th>
            <th>Course ID</th>
            <th>No. of Students</th>
            <th>Credits</th>
            <th>Semester</th>
            <th>Course Type</th>
            <th>Sharing Type</th>
            <th>Professors</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach((course, index)=> { %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.courseCode %></td>
            <td><%= course.numberOfStudents %></td>
            <td>
              <input
                type="number"
                step="any"
                class="credits-input"
                placeholder="Credits"
              />
            </td>
            <td><%= course.semester %></td>
            <td><%= course.courseType %></td>
            <td>
              <select class="sharing-type-select">
                <option value="">Select Sharing Type</option>
                <option value="Vertical">Vertical</option>
                <option value="Horizontal">Horizontal</option>
              </select>
            </td>
            <td>
              <button class="addProfessorButton" type="button">
                Add Professor
              </button>
            </td>
            <td>
              <button class="save-button" data-index="<%= index %>">
                Save
              </button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <button id="sendButton">Send</button>
      <!-- Logout button -->
      <form action="/logout" method="POST">
        <button type="submit">Logout</button>
      </form>
    </div>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const addProfessorButtons = document.querySelectorAll(".addProfessorButton");
      const saveButtons = document.querySelectorAll(".save-button");

      addProfessorButtons.forEach(function (button) {
        button.addEventListener("click", function () {
          const professorsContainer = document.createElement("div");
          professorsContainer.classList.add("professors-container");

          const professorInput = document.createElement("input");
          professorInput.type = "text";
          professorInput.placeholder = "Professor";
          professorsContainer.appendChild(professorInput);

          // Insert before the next sibling element within the same parent
          button.parentNode.insertBefore(professorsContainer, button.nextSibling);
        });
      });

      saveButtons.forEach(function (button) {
        button.addEventListener("click", function () {
          const row = button.closest("tr");
          const creditsInput = row.querySelector(".credits-input");
          const sharingTypeSelect = row.querySelector(".sharing-type-select");
          const professorsInputs = row.querySelectorAll(".professors-container input");

          const courseName = row.querySelector("td:nth-child(1)").textContent; // Assuming Course ID is in the second column

          const credits = creditsInput.value;
          const sharingType = sharingTypeSelect.value;
          const professors = Array.from(professorsInputs).map(input => input.value);

          if (confirm("Are you sure you want to save")) {
            fetch('/save-course', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                courseName: courseName,
                credits: credits,
                sharingType: sharingType,
                professors: professors
              })
            }).then(response => {
              if (response.ok) {
                // Course saved successfully, perform any additional actions here
                console.log('Course saved successfully');
              } else {
                // Handle error response
                console.error('Failed to save course');
              }
            }).catch(error => {
              console.error('Error saving course:', error);
            });
          }
        });
      });
    });
  </script>
</body>
</html>
