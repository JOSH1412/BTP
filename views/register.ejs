<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[20vw] h-[60vh] bg-white px-20 py-5 rounded-md">
      <h1 class="text-3xl tracking-tighter text-center capitalize font-semibold text-black-500 leading-none">Create New Account</h1>
      <form action="/register" method="post">
        <input class="block border-4 mt-2 w-full px-3 py-2"type="text" name="username" placeholder="Username">
        <input class="block border-4 mt-2 w-full px-3 py-2"type="email" name="email" placeholder="Email">
        <input class="block border-4 mt-2 w-full px-3 py-2"type="number" name="contact" placeholder="Contact">
        <input class="block border-4 mt-2 w-full px-3 py-2"type="password" name="password" placeholder="Password">
        <input class="block border-4 mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"type="submit" value="Sign Up">
      </form>
      <a class="text-blue-400 font-semibold text-center"href="/">Already a member?Log In</a>
    </div>
  </div>

